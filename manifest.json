{
  "manifest_version": 3,
  "name": "Context Caddy",
  "version": "1.0.0",
  "description": "Empower human chunking: organize, retrieve, and share context with smart MCP-connected cabinets for teams and individuals.",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "contextMenus"
  ],
  
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "action": {
    "default_title": "ContextCaddy",
    "default_icon": {
      "128": "assets/icon128.png"
    }
  },
  
  "assets": {
    "128": "assets/icon128.png"
  }
}